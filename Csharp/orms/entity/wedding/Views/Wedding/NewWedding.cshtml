@model wedding.Models.Wedding;
<link rel="stylesheet" href="~/css/wedding.css">

<h1>Plan Your Wedding</h1><a href="/dashboard">Dashboard</a><a href="/logout">Log out</a>

<form asp-action="CreateWedding" asp-controller="Wedding" method="POST">
    <table>
        <tr>
            <td><label asp-for="WedderOne"></label></td>
            <td><input asp-for="WedderOne">
                <span asp-validation-for="WedderOne"></span></td>
        </tr>
        <tr>
            <td><label asp-for="WedderTwo"></label></td>
            <td><input asp-for="WedderTwo">
                <span asp-validation-for="WedderTwo"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Date"></label></td>
            <td><input asp-for="Date" type="date">
                <span>@ViewBag.ErrorDate</span></td>
        </tr>
        <tr>
            <td><label asp-for="WeddingAddress"></label></td>
            <td><input asp-for="WeddingAddress">
                <span asp-validation-for="WeddingAddress"></span></td>
        </tr>
        <tr>
            <td></td>
            <td><button type="submit">Create</button></td>
        </tr>
    </table>
</form>