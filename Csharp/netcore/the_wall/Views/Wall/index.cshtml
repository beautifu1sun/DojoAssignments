<link rel="stylesheet" href="~/css/index.css">
@model the_wall.Models.User

<h1>Register</h1>
<form asp-controller="Logreg" asp-action="Register" method="POST">
    <table>
        <tr>
            <td><label asp-for="FirstName"></label></td>
            <td><input asp-for="FirstName">
            <span asp-validation-for="FirstName"></span></td>
        </tr>
        <tr>
            <td><label asp-for="LastName"></label></td>
            <td><input asp-for="LastName">
            <span asp-validation-for="LastName"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Email"></label></td>
            <td><input asp-for="Email">
            <span asp-validation-for="Email"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Password"></label></td>
            <td><input asp-for="Password">
            <span asp-validation-for="Password"></span></td>
        </tr>
        <tr>
            <td><label asp-for="PasswordConfirmation"></label></td>
            <td><input asp-for="PasswordConfirmation">
            <span asp-validation-for="PasswordConfirmation"></span></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" class="btn btn-default" value="Register"></td>
        </tr>
    </table>
</form>
<h1>Sign in</h1>
@Html.Partial("LoginPartial")
